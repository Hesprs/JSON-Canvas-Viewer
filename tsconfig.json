{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": true,
        "noEmit": false,
        "lib": ["ES2022", "DOM"]
    },
    "include": ["src"]
}